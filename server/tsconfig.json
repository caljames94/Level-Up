{
  "compilerOptions": {
    "target": "ES2018",
    "module": "NodeNext",               // Use ES Modules instead of CommonJS
    "lib": ["ES2018", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",   // Use Node.js-style resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
